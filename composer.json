{
    "name": "kodekeep/laravel-labels",
    "description": "Associations for labels and Laravel Eloquent models.",
    "keywords": [
        "kodekeep",
        "laravel-labels"
    ],
    "homepage": "https://github.com/kodekeep/laravel-labels",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@kodekeep.com",
            "homepage": "https://kodekeep.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/contracts": "^6.0",
        "illuminate/database": "^6.16",
        "illuminate/support": "^6.0",
        "spatie/laravel-sluggable": "^2.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "graham-campbell/analyzer": "^2.4",
        "orchestra/testbench": "^4.0",
        "phpstan/phpstan": "^0.12.11",
        "phpunit/phpunit": "^8.3",
        "spatie/phpunit-snapshot-assertions": "^3.1",
        "symfony/var-dumper": "4.4"
    },
    "autoload": {
        "psr-4": {
            "KodeKeep\\Labels\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KodeKeep\\Labels\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html=.coverage --coverage-clover=clover.xml",
        "format": "vendor/bin/php-cs-fixer fix ./",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "KodeKeep\\Labels\\Providers\\LabelsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
